# Loop to check user input for 4-digit integer
loop=1
while loop==1:
    try:
        integer1 = int(input('Please type the 1st integer:'))
        integer2 = int(input('Please type the 2nd integer:'))
        integer3 = int(input('Please type the 3rd integer:'))
        loop=0
    except ValueError:
        print('Please type in a proper integer!')

# Append the integers to a list and sort it
list1=[]
list1.append(integer1)
list1.append(integer2)
list1.append(integer3)
list1.sort()

# Print out a sorted list
print(f'Sorted numbers: {list1[0]}, {list1[1]} ,{list1[2]}')
